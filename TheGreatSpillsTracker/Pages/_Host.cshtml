@page "/"
@namespace TheGreatSpillsTracker.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TheGreatSpillsTracker</title>
    <base href="~/" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript" src="TimeCircles.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBBMB48-iekMA_p3RVY1I1XxQ81MjUozcY&v=3"></script>
    <script src="_content/BlazorGoogleMaps/objectManager.js"></script>
    <link href="css/TimeCircles.css" rel="stylesheet" />
    <link href="css/Custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script>
        function InitTimeCircles() {
            $(".EnterpriseTime").TimeCircles();
            $(".HomeTime").TimeCircles();
            $(".RecordTime").TimeCircles();
        }

        function RebuildTimeCircles() {
            $(".EnterpriseTime").TimeCircles().rebuild();
            $(".HomeTime").TimeCircles().rebuild();
            $(".RecordTime").TimeCircles().rebuild();
        }
    </script>
</body>
</html>
